# Secrets Configuration Example for Workshop Environment
# Copy this file to secrets.auto.tfvars and fill in your values
# IMPORTANT: secrets.auto.tfvars is in .gitignore - never commit secrets!

# SQL Server Admin Credentials
sql_admin_username = "mcpadmin"
sql_admin_password = "YourSecurePassword123!"

# Azure AD Admin Configuration (Optional for workshop)
# Uncomment and fill these if you want to use Azure AD authentication:
# azuread_admin_login     = "your-email@domain.com"
# azuread_admin_object_id = "00000000-0000-0000-0000-000000000000"

# JWT Configuration for MCP Server Authentication
jwt_secret   = "your-jwt-secret-min-32-chars-long"
jwt_issuer   = "mcpworkshop"
jwt_audience = "mcpworkshop-api"
